{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Teo",
  "scopeName": "source.teo",
  "fileTypes": [
    "teo"
  ],
  "patterns": [
    {
      "include": "docComment"
    },
    {
      "include": "codeComment"
    }
  ],
  "repository": {
    "docComment": {
      "begin": "///(?<![_$[:alnum:]])(?:(?<=\\.\\.\\.)|(?<!\\.))",
      "end": "$\\n?",
      "name": "comment.teo.doc"
    }
  }
}